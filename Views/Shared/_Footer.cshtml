<!-- Footer Moderno y Responsive -->
<footer class="modern-footer">
    <div class="footer-container">
        <!-- Footer Main Content -->
        <div class="footer-grid">
            <!-- Footer Brand Column -->
            <div class="footer-column footer-brand-column">
                <div class="footer-logo">
                    <i data-lucide="graduation-cap"></i>
                    <span class="footer-logo-text">Registro QR</span>
                </div>
                <p class="footer-tagline">Sistema de Asistencia Inteligente con Código QR</p>
                <div class="footer-stats">
                    <div class="footer-stat-item">
                        <i data-lucide="check-circle-2"></i>
                        <span>Asistencia en Tiempo Real</span>
                    </div>
                    <div class="footer-stat-item">
                        <i data-lucide="shield-check"></i>
                        <span>Seguro y Confiable</span>
                    </div>
                </div>
            </div>

            @if (User.Identity?.IsAuthenticated == true)
            {
                <!-- Accesos Rápidos -->
                <div class="footer-column">
                    <h4 class="footer-column-title">Accesos Rápidos</h4>
                    <nav class="footer-links">
                        <a href="/dashboard" class="footer-link">
                            <i data-lucide="layout-dashboard"></i>
                            <span>Dashboard</span>
                        </a>
                        <a href="/workflow/cursos" class="footer-link">
                            <i data-lucide="plus-circle"></i>
                            <span>Nueva Clase</span>
                        </a>
                        <a href="/docente/scanner" class="footer-link">
                            <i data-lucide="qr-code"></i>
                            <span>Escáner QR</span>
                        </a>
                        <a href="/workflow/mis-clases" class="footer-link">
                            <i data-lucide="calendar-days"></i>
                            <span>Mis Clases</span>
                        </a>
                    </nav>
                </div>

                <!-- Gestión -->
                <div class="footer-column">
                    <h4 class="footer-column-title">Gestión</h4>
                    <nav class="footer-links">
                        <a href="/docente/cursos" class="footer-link">
                            <i data-lucide="book-open"></i>
                            <span>Mis Cursos</span>
                        </a>
                        <a href="/alumnos" class="footer-link">
                            <i data-lucide="users"></i>
                            <span>Alumnos</span>
                        </a>
                        <a href="/asistencias" class="footer-link">
                            <i data-lucide="clipboard-check"></i>
                            <span>Asistencias</span>
                        </a>
                        <a href="/ramos" class="footer-link">
                            <i data-lucide="library"></i>
                            <span>Ramos</span>
                        </a>
                    </nav>
                </div>
            }

            <!-- Soporte y Recursos -->
            <div class="footer-column">
                <h4 class="footer-column-title">Soporte</h4>
                <nav class="footer-links">
                    <a href="/ayuda" class="footer-link">
                        <i data-lucide="help-circle"></i>
                        <span>Centro de Ayuda</span>
                    </a>
                    <a href="/swagger" target="_blank" class="footer-link">
                        <i data-lucide="code-2"></i>
                        <span>Documentación API</span>
                    </a>
                    @if (User.IsInRole("Administrador"))
                    {
                        <a href="/dashboard" class="footer-link">
                            <i data-lucide="settings"></i>
                            <span>Panel Admin</span>
                        </a>
                    }
                </nav>
            </div>
        </div>

        <!-- Footer Bottom Bar -->
        <div class="footer-bottom">
            <div class="footer-bottom-content">
                <div class="footer-copyright">
                    <i data-lucide="copyright"></i>
                    <span>@DateTime.Now.Year Sistema de Registro QR. Todos los derechos reservados.</span>
                </div>
                <div class="footer-meta">
                    <div class="footer-version">
                        <i data-lucide="info"></i>
                        <span>v2.0.0</span>
                    </div>
                    <div class="footer-build">
                        <i data-lucide="calendar"></i>
                        <span>@DateTime.Now.ToString("dd/MM/yyyy")</span>
                    </div>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="footer-user-badge">
                            <i data-lucide="user"></i>
                            <span>@User.Identity.Name</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Back to Top Button -->
    <button class="back-to-top" id="backToTop" aria-label="Volver arriba">
        <i data-lucide="arrow-up"></i>
    </button>
</footer>

<style>
/* Modern Footer Styles */
.modern-footer {
    background: linear-gradient(135deg,
        rgba(15, 23, 42, 0.98) 0%,
        rgba(30, 41, 59, 0.95) 100%);
    backdrop-filter: blur(20px);
    border-top: 1px solid rgba(148, 163, 184, 0.1);
    color: rgba(226, 232, 240, 0.9);
    padding: 3rem 0 1rem;
    margin-top: auto;
    position: relative;
    overflow: hidden;
}

.modern-footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg,
        transparent,
        rgba(14, 165, 233, 0.5),
        transparent);
}

.footer-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
}

.footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem 2rem;
    margin-bottom: 2.5rem;
}

/* Footer Brand Column */
.footer-brand-column {
    grid-column: span 1;
}

.footer-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
}

.footer-logo i {
    width: 36px;
    height: 36px;
    color: #0ea5e9;
}

.footer-logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #0ea5e9, #06b6d4);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.footer-tagline {
    font-size: 0.95rem;
    color: rgba(226, 232, 240, 0.7);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    max-width: 280px;
}

.footer-stats {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.footer-stat-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: rgba(226, 232, 240, 0.8);
}

.footer-stat-item i {
    width: 18px;
    height: 18px;
    color: #0ea5e9;
}

/* Footer Columns */
.footer-column-title {
    font-size: 1rem;
    font-weight: 600;
    color: #f1f5f9;
    margin-bottom: 1.25rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.footer-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.footer-link {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    color: rgba(226, 232, 240, 0.75);
    text-decoration: none;
    font-size: 0.9375rem;
    transition: all 0.2s ease;
    padding: 0.375rem 0;
}

.footer-link i {
    width: 18px;
    height: 18px;
    opacity: 0.7;
    transition: all 0.2s ease;
}

.footer-link:hover {
    color: #0ea5e9;
    transform: translateX(4px);
}

.footer-link:hover i {
    opacity: 1;
    color: #0ea5e9;
}

/* Footer Bottom */
.footer-bottom {
    border-top: 1px solid rgba(148, 163, 184, 0.1);
    padding-top: 1.5rem;
}

.footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
}

.footer-copyright {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: rgba(226, 232, 240, 0.6);
}

.footer-copyright i {
    width: 16px;
    height: 16px;
}

.footer-meta {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
}

.footer-version,
.footer-build,
.footer-user-badge {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8125rem;
    color: rgba(226, 232, 240, 0.5);
}

.footer-version i,
.footer-build i,
.footer-user-badge i {
    width: 14px;
    height: 14px;
}

.footer-user-badge {
    background: rgba(14, 165, 233, 0.1);
    padding: 0.375rem 0.75rem;
    border-radius: 0.5rem;
    color: #0ea5e9;
}

/* Back to Top Button */
.back-to-top {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, #0ea5e9, #06b6d4);
    border: none;
    border-radius: 50%;
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 12px rgba(14, 165, 233, 0.3);
    z-index: 1000;
}

.back-to-top.visible {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

.back-to-top:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(14, 165, 233, 0.4);
}

.back-to-top i {
    width: 24px;
    height: 24px;
}

/* Responsive Design */
@@media (max-width: 1024px) {
    .footer-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
    }

    .footer-brand-column {
        grid-column: span 2;
    }
}

@@media (max-width: 640px) {
    .modern-footer {
        padding: 2rem 0 1rem;
    }

    .footer-grid {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .footer-brand-column {
        grid-column: span 1;
        text-align: center;
    }

    .footer-logo {
        justify-content: center;
    }

    .footer-tagline {
        max-width: 100%;
    }

    .footer-stats {
        align-items: center;
    }

    .footer-bottom-content {
        flex-direction: column;
        text-align: center;
        gap: 1rem;
    }

    .footer-meta {
        justify-content: center;
    }

    .back-to-top {
        bottom: 1rem;
        right: 1rem;
        width: 44px;
        height: 44px;
    }
}

@@media (max-width: 480px) {
    .footer-container {
        padding: 0 1rem;
    }

    .footer-meta {
        flex-direction: column;
        gap: 0.75rem;
    }

    .footer-copyright {
        flex-direction: column;
        gap: 0.25rem;
    }
}
</style>

<script>
// Back to Top Button Functionality
document.addEventListener('DOMContentLoaded', function() {
    const backToTopBtn = document.getElementById('backToTop');

    if (backToTopBtn) {
        // Show/hide button based on scroll position
        window.addEventListener('scroll', function() {
            if (window.pageYOffset > 300) {
                backToTopBtn.classList.add('visible');
            } else {
                backToTopBtn.classList.remove('visible');
            }
        });

        // Scroll to top on click
        backToTopBtn.addEventListener('click', function() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
    }
});
</script>
