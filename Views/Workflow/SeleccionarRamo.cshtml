@model SeleccionarRamoViewModel

<div class="workflow-container">
    <!-- Header del Workflow -->
    <div class="workflow-header">
        <div class="workflow-breadcrumb">
            <span class="step completed">1. Seleccionar Curso</span>
            <span class="step active">2. Seleccionar Ramo</span>
            <span class="step">3. Configurar Clase</span>
            <span class="step">4. Clase Creada</span>
        </div>
        <h1>üìñ Paso 2: Selecciona un Ramo</h1>
        <p>Elige el ramo del curso <strong>@Model.Curso.Nombre</strong> para crear la clase</p>
    </div>

    <!-- Informaci√≥n del Curso Seleccionado -->
    <div class="selected-course-info">
        <div class="course-summary">
            <div class="course-icon">üìö</div>
            <div class="course-details">
                <h3>@Model.Curso.Nombre</h3>
                <p class="course-code">@Model.Curso.Codigo</p>
                @if (!string.IsNullOrEmpty(Model.Curso.Descripcion))
                {
                    <p class="course-description">@Model.Curso.Descripcion</p>
                }
            </div>
        </div>
    </div>

    <!-- Lista de Ramos -->
    <div class="ramos-selection">
        @if (!Model.Ramos.Any())
        {
            <div class="no-ramos">
                <div class="empty-state">
                    <div class="empty-icon">üìñ</div>
                    <h3>Este curso no tiene ramos asignados</h3>
                    <p>Es necesario que el curso tenga al menos un ramo para poder crear una clase.</p>
                    <div class="empty-actions">
                        <a href="/admin/cursos/@Model.Curso.Id/ramos" class="btn-primary">
                            Gestionar Ramos
                        </a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="ramos-grid">
                @foreach (var ramo in Model.Ramos)
                {
                    <div class="ramo-card" onclick="selectRamo(@ramo.Id, '@ramo.Nombre', @Model.Curso.Id)">
                        <div class="ramo-header">
                            <div class="ramo-icon">üìö</div>
                            <div class="ramo-title">
                                <h3>@ramo.Nombre</h3>
                                <span class="ramo-code">@ramo.Codigo</span>
                            </div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(ramo.Descripcion))
                        {
                            <div class="ramo-description">
                                <p>@ramo.Descripcion</p>
                            </div>
                        }
                        
                        <div class="ramo-stats">
                            <div class="stat-item">
                                <span class="stat-icon">‚è∞</span>
                                <span class="stat-text">@ramo.HorasSemanales hrs/semana</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-icon">üìÖ</span>
                                <span class="stat-text">@ramo.TotalClases clases creadas</span>
                            </div>
                        </div>
                        
                        <div class="ramo-actions">
                            <button class="btn-select" onclick="selectRamo(@ramo.Id, '@ramo.Nombre', @Model.Curso.Id)">
                                <span>Seleccionar Ramo</span>
                                <span class="arrow">‚Üí</span>
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Acciones del Workflow -->
    <div class="workflow-actions">
        <a href="/workflow" class="btn-secondary">
            ‚Üê Cambiar Curso
        </a>
        
        <div class="action-right">
            @if (Model.Curso.EsPropietario)
            {
                <a href="/admin/cursos/@Model.Curso.Id/crear-ramo" class="btn-outline">
                    + Crear Nuevo Ramo
                </a>
            }
        </div>
    </div>
</div>

<script>
function selectRamo(ramoId, ramoNombre, cursoId) {
    // Mostrar loading
    const card = event.currentTarget;
    const originalContent = card.innerHTML;
    card.innerHTML = `
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Configurando clase...</p>
        </div>
    `;
    
    // Navegar al siguiente paso
    window.location.href = `/workflow/crear-clase?cursoId=${cursoId}&ramoId=${ramoId}`;
}

// Animaciones de entrada
document.addEventListener('DOMContentLoaded', function() {
    const cards = document.querySelectorAll('.ramo-card');
    cards.forEach((card, index) => {
        card.style.animationDelay = `${index * 0.1}s`;
        card.classList.add('fade-in');
    });
});
</script>

