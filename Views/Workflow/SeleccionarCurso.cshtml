@model List<CursoViewModel>

<div class="workflow-container">
    <!-- Header del Workflow -->
    <div class="workflow-header">
        <div class="workflow-breadcrumb">
            <span class="step active">1. Seleccionar Curso</span>
            <span class="step">2. Seleccionar Ramo</span>
            <span class="step">3. Configurar Clase</span>
            <span class="step">4. Clase Creada</span>
        </div>
        <h1>üìö Paso 1: Selecciona un Curso</h1>
        <p>Elige el curso para el cual deseas crear una nueva clase</p>
    </div>

    <!-- Lista de Cursos -->
    <div class="courses-selection">
        @if (!Model.Any())
        {
            <div class="no-courses">
                <div class="empty-state">
                    <div class="empty-icon">üìö</div>
                    <h3>No tienes cursos asignados</h3>
                    <p>Solicita a un administrador que te asigne cursos o crea uno nuevo.</p>
                    <a href="/docente/cursos/crear" class="btn-primary">Crear Nuevo Curso</a>
                </div>
            </div>
        }
        else
        {
            <div class="courses-grid">
                @foreach (var curso in Model)
                {
                    <div class="course-card" onclick="selectCourse(@curso.Id, '@curso.Nombre')">
                        <div class="course-header">
                            <h3>@curso.Nombre</h3>
                            <span class="course-code">@curso.Codigo</span>
                            @if (curso.EsPropietario)
                            {
                                <span class="owner-badge">üëë</span>
                            }
                        </div>
                        
                        @if (!string.IsNullOrEmpty(curso.Descripcion))
                        {
                            <div class="course-description">
                                <p>@curso.Descripcion</p>
                            </div>
                        }
                        
                        <div class="course-stats">
                            <div class="stat-item">
                                <span class="stat-icon">üìñ</span>
                                <span class="stat-text">@curso.TotalRamos @(curso.TotalRamos == 1 ? "ramo" : "ramos")</span>
                            </div>
                        </div>
                        
                        <div class="course-actions">
                            <button class="btn-select" onclick="selectCourse(@curso.Id, '@curso.Nombre')">
                                <span>Seleccionar Curso</span>
                                <span class="arrow">‚Üí</span>
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Acciones del Workflow -->
    <div class="workflow-actions">
        <a href="/docente/dashboard" class="btn-secondary">
            ‚Üê Volver al Dashboard
        </a>
        
        <div class="action-right">
            <a href="/docente/cursos/crear" class="btn-outline">
                + Crear Nuevo Curso
            </a>
        </div>
    </div>
</div>

<script>
function selectCourse(cursoId, cursoNombre) {
    // Mostrar loading
    const card = event.currentTarget;
    const originalContent = card.innerHTML;
    card.innerHTML = `
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Cargando ramos...</p>
        </div>
    `;
    
    // Navegar al siguiente paso
    window.location.href = `/workflow/ramos/${cursoId}`;
}

// Animaciones de entrada
document.addEventListener('DOMContentLoaded', function() {
    const cards = document.querySelectorAll('.course-card');
    cards.forEach((card, index) => {
        card.style.animationDelay = `${index * 0.1}s`;
        card.classList.add('fade-in');
    });
});
</script>

