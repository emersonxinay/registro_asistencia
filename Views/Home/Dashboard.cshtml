@section Scripts {
<script>
    // Cargar clases en el selector
    async function cargarClasesEnSelector() {
        try {
            const clases = await Utils.request('/api/clases');
            const select = document.getElementById('claseIdQr');
            const btn = document.getElementById('btnGenerarQr');
            
            select.innerHTML = '<option value="">Selecciona una clase...</option>';
            
            clases.forEach(clase => {
                if (clase.activa) {
                    const option = document.createElement('option');
                    option.value = clase.id;
                    option.textContent = `${clase.asignatura} (ID: ${clase.id})`;
                    select.appendChild(option);
                }
            });
            
            // Habilitar bot√≥n cuando se seleccione una clase
            select.addEventListener('change', () => {
                btn.disabled = !select.value;
            });
            
        } catch (error) {
            console.error('Error cargando clases:', error);
        }
    }

    async function generarQrClase() {
        const claseId = document.getElementById('claseIdQr').value;
        if (!claseId) {
            alert('Por favor selecciona una clase');
            return;
        }

        const container = document.getElementById('qrContainer');
        const instructions = document.getElementById('qrInstructions');
        
        container.style.display = 'block';
        instructions.style.display = 'block';
        
        // Usar el QR manager
        window.qrManager.currentClassId = claseId;
        await window.qrManager.loadQr();
        window.qrManager.startAutoRefresh();
        
        // Scroll al QR
        container.scrollIntoView({ behavior: 'smooth' });
    }
    
    // Cargar clases al inicializar
    document.addEventListener('DOMContentLoaded', () => {
        setTimeout(cargarClasesEnSelector, 500);
    });
</script>

