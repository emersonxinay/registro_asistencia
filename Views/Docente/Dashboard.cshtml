@model DocenteDashboardViewModel

<div class="docente-dashboard">
    <div class="header-section">
        <h1>ðŸŽ“ Dashboard del Docente</h1>
        <p class="subtitle">Bienvenido, @User.Identity!.Name</p>
    </div>

    <!-- EstadÃ­sticas RÃ¡pidas -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">ðŸ“š</div>
            <div class="stat-content">
                <h3>@Model.Estadisticas.TotalCursos</h3>
                <p>Cursos</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">ðŸ“–</div>
            <div class="stat-content">
                <h3>@Model.Estadisticas.TotalRamos</h3>
                <p>Ramos</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">ðŸ“…</div>
            <div class="stat-content">
                <h3>@Model.Estadisticas.ClasesHoy</h3>
                <p>Clases Hoy</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">ðŸ‘¥</div>
            <div class="stat-content">
                <h3>@Model.Estadisticas.TotalEstudiantes</h3>
                <p>Estudiantes</p>
            </div>
        </div>
    </div>

    <!-- Acciones RÃ¡pidas -->
    <div class="quick-actions">
        <h2>ðŸš€ Acciones RÃ¡pidas</h2>
        <div class="actions-grid">
            <a href="/workflow" class="action-btn primary">
                <div class="action-icon">âž•</div>
                <div class="action-content">
                    <h4>Crear Nueva Clase</h4>
                    <p>Workflow paso a paso</p>
                </div>
            </a>
            <a href="/docente/scanner" class="action-btn secondary">
                <div class="action-icon">ðŸ“±</div>
                <div class="action-content">
                    <h4>Scanner Asistencia</h4>
                    <p>Escanear QR estudiantes</p>
                </div>
            </a>
            <a href="/docente/cursos" class="action-btn tertiary">
                <div class="action-icon">ðŸ“Š</div>
                <div class="action-content">
                    <h4>Gestionar Cursos</h4>
                    <p>Ver y administrar</p>
                </div>
            </a>
        </div>
    </div>

    <!-- Clases de Hoy -->
    @if (Model.ClasesHoy.Any())
    {
        <div class="today-classes">
            <h2>ðŸ“… Clases de Hoy</h2>
            <div class="classes-list">
                @foreach (var clase in Model.ClasesHoy)
                {
                    <div class="class-card @(clase.Activa ? "active" : "")">
                        <div class="class-time">
                            @clase.HoraInicio.ToString("HH:mm")
                        </div>
                        <div class="class-info">
                            <h4>@clase.Nombre</h4>
                            <p>@clase.RamoNombre - @clase.CursoNombre</p>
                            <small>@clase.TotalAsistencias asistencias registradas</small>
                        </div>
                        <div class="class-actions">
                            @if (clase.Activa)
                            {
                                <a href="/docente/scanner/@clase.Id" class="btn-small primary">Ver Scanner</a>
                            }
                            else
                            {
                                <span class="status-badge">Finalizada</span>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Mis Cursos -->
    @if (Model.Cursos.Any())
    {
        <div class="my-courses">
            <h2>ðŸ“š Mis Cursos</h2>
            <div class="courses-grid">
                @foreach (var curso in Model.Cursos)
                {
                    <div class="course-card">
                        <div class="course-header">
                            <h4>@curso.Nombre</h4>
                            <span class="course-code">@curso.Codigo</span>
                            @if (curso.EsPropietario)
                            {
                                <span class="owner-badge">ðŸ‘‘ Propietario</span>
                            }
                        </div>
                        <div class="course-stats">
                            <p>@curso.TotalRamos ramos</p>
                        </div>
                        <div class="course-actions">
                            <a href="/docente/cursos/@curso.Id" class="btn-small">Ver Detalle</a>
                        </div>
                    </div>
                }
            </div>
            <div class="view-all">
                <a href="/docente/cursos" class="btn-outline">Ver Todos los Cursos</a>
            </div>
        </div>
    }
</div>

<style>
