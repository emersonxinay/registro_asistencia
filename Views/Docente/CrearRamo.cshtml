@model CrearRamoFormViewModel

<div class="crear-ramo-container">
    <div class="crear-ramo-header">
        <div class="header-content">
            <h1>üìñ Crear Nuevo Ramo</h1>
            <p>A√±ade un nuevo ramo al curso <strong>@Model.CursoNombre</strong> (@Model.CursoCodigo)</p>
        </div>
        <div class="header-actions">
            <a href="/docente/cursos/@Model.CursoId" class="btn-secondary">
                ‚Üê Volver al Curso
            </a>
        </div>
    </div>

    <!-- Informaci√≥n del Curso -->
    <div class="curso-info">
        <div class="curso-card">
            <div class="curso-icon">üìö</div>
            <div class="curso-details">
                <h3>@Model.CursoNombre</h3>
                <span class="curso-code">@Model.CursoCodigo</span>
            </div>
        </div>
    </div>

    <!-- Formulario para crear ramo -->
    <form id="formCrearRamo" action="/docente/cursos/@Model.CursoId/ramos" method="post">
        @Html.AntiForgeryToken()
        
        <div class="form-sections">
            <div class="form-section">
                <div class="section-header">
                    <h3>üìù Informaci√≥n del Ramo</h3>
                    <p>Define los datos del nuevo ramo para este curso</p>
                </div>
                
                <div class="section-content">
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="nombre">
                                <i data-lucide="book-open"></i>
                                Nombre del Ramo *
                            </label>
                            <input 
                                type="text" 
                                id="nombre" 
                                name="Nombre" 
                                placeholder="Ej: √Ålgebra Lineal"
                                required
                                maxlength="200"
                                value="@Model.Nombre">
                            <small>Nombre descriptivo del ramo/asignatura</small>
                            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "error-message" })
                        </div>
                        
                        <div class="form-group">
                            <label for="codigo">
                                <i data-lucide="hash"></i>
                                C√≥digo del Ramo *
                            </label>
                            <input 
                                type="text" 
                                id="codigo" 
                                name="Codigo" 
                                placeholder="Ej: ALG101"
                                required
                                maxlength="50"
                                value="@Model.Codigo">
                            <small>C√≥digo √∫nico identificativo del ramo</small>
                            @Html.ValidationMessageFor(m => m.Codigo, "", new { @class = "error-message" })
                        </div>
                    </div>
                    
                    <div class="form-group full-width">
                        <label for="descripcion">
                            <i data-lucide="file-text"></i>
                            Descripci√≥n (Opcional)
                        </label>
                        <textarea 
                            id="descripcion" 
                            name="Descripcion" 
                            rows="4"
                            maxlength="500"
                            placeholder="Descripci√≥n detallada del ramo, objetivos, metodolog√≠a...">@Model.Descripcion</textarea>
                        <small>Informaci√≥n adicional sobre el ramo (m√°ximo 500 caracteres)</small>
                        @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "error-message" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <div class="action-left">
                <a href="/docente/cursos/@Model.CursoId" class="btn-cancel">
                    <i data-lucide="x"></i>
                    Cancelar
                </a>
            </div>
            <div class="action-right">
                <button type="submit" class="btn-primary" id="btnCrearRamo">
                    <i data-lucide="plus"></i>
                    Crear Ramo
                    <span class="loading-spinner" style="display: none;">
                        <i data-lucide="loader-2"></i>
                    </span>
                </button>
            </div>
        </div>
    </form>
</div>

<!-- Toast para mostrar mensajes -->
<div id="toast" class="toast" style="display: none;"></div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('formCrearRamo');
    const submitBtn = document.getElementById('btnCrearRamo');
    const spinner = submitBtn.querySelector('.loading-spinner');
    
    form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Mostrar loading
        submitBtn.disabled = true;
        spinner.style.display = 'inline-block';
        submitBtn.innerHTML = '<i data-lucide="loader-2"></i> Creando Ramo...';
        
        // Recopilar datos del formulario
        const formData = new FormData(form);
        
        // Enviar datos como FormData al endpoint POST
        fetch(form.action, {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showToast(data.message, 'success');
                setTimeout(() => {
                    window.location.href = '/docente/cursos/@Model.CursoId';
                }, 1500);
            } else {
                showToast(data.message || 'Error al crear el ramo', 'error');
                resetButton();
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showToast('Error de conexi√≥n al crear el ramo', 'error');
            resetButton();
        });
    });
    
    function resetButton() {
        submitBtn.disabled = false;
        spinner.style.display = 'none';
        submitBtn.innerHTML = '<i data-lucide="plus"></i> Crear Ramo';
    }
    
    function showToast(message, type) {
        const toast = document.getElementById('toast');
        toast.textContent = message;
        toast.className = `toast toast-${type}`;
        toast.style.display = 'block';
        
        setTimeout(() => {
            toast.style.display = 'none';
        }, 4000);
    }
});
</script>

