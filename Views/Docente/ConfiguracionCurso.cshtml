                        Eliminar Curso
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function showAdvancedOptions() {
    document.getElementById('advancedModal').style.display = 'block';
}

function hideAdvancedOptions() {
    document.getElementById('advancedModal').style.display = 'none';
}

function exportarDatos() {
    alert('Funci√≥n de exportaci√≥n en desarrollo');
    hideAdvancedOptions();
}

function archivarCurso() {
    if (confirm('¬øEst√°s seguro de que quieres archivar este curso?')) {
        alert('Funci√≥n de archivado en desarrollo');
        hideAdvancedOptions();
    }
}

function confirmarEliminacion() {
    if (confirm('‚ö†Ô∏è ADVERTENCIA: Esta acci√≥n eliminar√° permanentemente el curso y TODOS sus datos.\n\n¬øEst√°s absolutamente seguro?')) {
        if (confirm('Esta es la √∫ltima confirmaci√≥n. ¬øRealmente quieres eliminar el curso "@Model.Nombre"?')) {
            alert('Funci√≥n de eliminaci√≥n en desarrollo');
            hideAdvancedOptions();
        }
    }
}

// Cerrar modal al hacer click fuera
window.onclick = function(event) {
    const modal = document.getElementById('advancedModal');
    if (event.target === modal) {
        hideAdvancedOptions();
    }
}
</script>

