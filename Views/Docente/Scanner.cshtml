<script>
let selectedClassId = null;
let stream = null;
let isScanning = false;

// Variables para el esc√°ner QR
let codeReader = null;

function selectClass(classId, className) {
    selectedClassId = classId;
    
    // Actualizar visualizaci√≥n
    document.querySelectorAll('.class-option').forEach(option => {
        option.classList.remove('selected');
    });
    
    document.querySelector(`[data-class-id="${classId}"]`).classList.add('selected');
    
    // Mostrar informaci√≥n de clase seleccionada
    const selectedClassInfo = document.getElementById('selectedClassInfo');
    selectedClassInfo.innerHTML = `
        <h3>üìñ Clase Seleccionada: ${className}</h3>
        <p>Los estudiantes que escanees ser√°n registrados para esta clase.</p>
        <div class="class-actions">
            <button class="btn-primary" onclick="startScanning()">
                <i data-lucide="scan"></i>
                Iniciar Escaneo
            </button>
        </div>
    `;
    
    // Mostrar esc√°ner
    document.getElementById('qrScanner').style.display = 'block';
    
    // Recargar iconos
    if (typeof lucide !== 'undefined') {
        lucide.createIcons();
    }
}

function startScanning() {
    if (!selectedClassId) {
        alert('Primero selecciona una clase');
        return;
    }
    
    isScanning = true;
    startCamera();
    loadExistingAttendance();
}

async function startCamera() {
    try {
        const constraints = {
            video: {
                facingMode: 'environment' // C√°mara trasera preferida
            }
        };
        
        stream = await navigator.mediaDevices.getUserMedia(constraints);
        const video = document.getElementById('cameraFeed');
        video.srcObject = stream;
        
        updateCameraToggle(true);
        
        // Iniciar detecci√≥n QR
        startQRDetection();
        
    } catch (error) {
        console.error('Error accediendo a la c√°mara:', error);
        alert('No se pudo acceder a la c√°mara. Verifica los permisos.');
    }
}

function stopCamera() {
    if (stream) {
        stream.getTracks().forEach(track => track.stop());
        stream = null;
        updateCameraToggle(false);
    }
    isScanning = false;
}

function updateCameraToggle(isActive) {
    const toggleText = document.getElementById('cameraToggleText');
    if (isActive) {
        toggleText.textContent = 'Desactivar C√°mara';
    } else {
        toggleText.textContent = 'Activar C√°mara';
    }
}

function toggleCamera() {
    if (stream) {
        stopCamera();
    } else {
        startCamera();
    }
}

function startQRDetection() {
    const video = document.getElementById('cameraFeed');
    const canvas = document.getElementById('qrCanvas');
    const context = canvas.getContext('2d');
    
    function scanFrame() {
        if (!isScanning || !video.videoWidth) {
            requestAnimationFrame(scanFrame);
            return;
        }
        
        canvas.width = video.videoWidth;
        canvas.height = video.videoHeight;
        context.drawImage(video, 0, 0);
        
        const imageData = context.getImageData(0, 0, canvas.width, canvas.height);
        
        try {
            // Intentar detectar QR usando jsQR (requiere incluir la librer√≠a)
            if (typeof jsQR !== 'undefined') {
                const qrCode = jsQR(imageData.data, canvas.width, canvas.height);
                if (qrCode) {
                    console.log('üéØ QR Detectado:', qrCode.data);
                    processQRCode(qrCode.data);
                    return; // Parar el escaneo moment√°neamente despu√©s de detectar
                }
            } else {
                console.log('üì∑ jsQR no disponible - modo de escaneo manual activo');
            }

            // Para testing: Simular QR de estudiante (solo para desarrollo)
            // Descomenta la l√≠nea siguiente para probar con datos de ejemplo:
            // processQRCode('{"type":"student","studentId":1,"studentCode":"EST000001","timestamp":"2024-01-01T10:00:00Z","version":"1.0"}');

        } catch (error) {
            console.error('Error detectando QR:', error);
        }
        
        if (isScanning) {
            requestAnimationFrame(scanFrame);
        }
    }
    
    video.addEventListener('loadeddata', () => {
        scanFrame();
    });
}

async function processQRCode(qrData) {
    if (!selectedClassId) {
        showError('‚ùå Selecciona una clase primero');
        return;
    }

    console.log('üì± QR Escaneado:', qrData);

    try {
        // PRIORIDAD: Usar el nuevo endpoint para scanner de docente
        const response = await fetch('/api/attendance/scan-student-qr', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                claseId: selectedClassId,
                qrData: qrData
            })
        });

        const result = await response.json();

        // Procesar resultado y agregarlo a la lista
        if (result.success && result.asistencia) {
            const scanResult = {
                success: true,
                studentName: result.asistencia.alumnoNombre,
                studentCode: result.asistencia.alumnoCodigo,
                estado: result.asistencia.estado,
                metodo: result.asistencia.metodo,
                message: result.message,
                timestamp: result.asistencia.marcadaUtc
            };

            addScanResult(scanResult);
            showSuccess(`‚úÖ ${result.asistencia.alumnoNombre} (${result.asistencia.alumnoCodigo}) registrado correctamente`);

            // Sonido de √©xito (opcional)
            playSuccessSound();

        } else {
            const errorResult = {
                success: false,
                studentName: 'Error en QR',
                estado: 'Error',
                message: result.message || 'QR inv√°lido'
            };

            addScanResult(errorResult);
            showError(`‚ùå ${result.message || 'Error procesando QR'}`);

            // Sonido de error (opcional)
            playErrorSound();
        }

    } catch (error) {
        console.error('Error procesando QR:', error);

        const errorResult = {
            success: false,
            studentName: 'Error de conexi√≥n',
            estado: 'Error',
            message: 'Error de red o servidor'
        };

        addScanResult(errorResult);
        showError('‚ùå Error de conexi√≥n al procesar QR');
        playErrorSound();
    }
}

function addScanResult(result) {
    const resultsList = document.getElementById('resultsList');
    const resultItem = document.createElement('div');
    resultItem.className = `result-item ${result.success ? 'success' : 'error'}`;
    
    const now = new Date();
    const timeStr = now.toLocaleTimeString();
    
    resultItem.innerHTML = `
        <div class="result-info">
            <h5>${result.studentName || 'Estudiante desconocido'}</h5>
            <p>${result.message} - ${timeStr}</p>
        </div>
        <div class="result-badge ${result.estado?.toLowerCase() || 'error'}">
            ${result.estado || 'Error'}
        </div>
    `;
    
    resultsList.insertBefore(resultItem, resultsList.firstChild);
}

