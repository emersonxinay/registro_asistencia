            if (cleanValue.length === 0) {
                e.target.style.borderColor = '#e9ecef'; // Default
            } else if (isValid) {
                e.target.style.borderColor = '#27ae60'; // Green for valid
            } else if (isPartiallyValid) {
                e.target.style.borderColor = '#f39c12'; // Orange for in-progress
            } else {
                e.target.style.borderColor = '#e74c3c'; // Red for invalid
            }
        });
    }
});
