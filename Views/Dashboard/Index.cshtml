            confirmDeleteSubject(id) { if (confirm('쮼liminar ramo?')) this.deleteSubject(id); },
            async deleteSubject(id) { 
                try {
                    await fetch('/api/ramos/' + id, { method: 'DELETE' });
                    this.loadSubjects();
                } catch (error) {
                    alert('Error eliminando ramo');
